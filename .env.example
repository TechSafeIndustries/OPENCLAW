# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# ============================================
# GOOGLE CLOUD / GEMINI SETTINGS
# ============================================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-3-pro
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ============================================
# ANTIGRAVITY AUTH BRIDGE
# ============================================
AUTH_BRIDGE_ENDPOINT=https://your-auth-bridge.example.com
AUTH_BRIDGE_API_KEY=your-auth-bridge-key

# ============================================
# MODEL CONTEXT PROTOCOL (MCP)
# ============================================
MCP_ENDPOINT=https://mcp.example.com
MCP_API_KEY=your-mcp-api-key

# BigQuery
BIGQUERY_PROJECT_ID=your-bigquery-project
BIGQUERY_DATASET=openclaw_dataset

# AlloyDB
ALLOYDB_INSTANCE=your-alloydb-instance
ALLOYDB_DATABASE=openclaw
ALLOYDB_USER=openclaw_user
ALLOYDB_PASSWORD=your-secure-password
ALLOYDB_HOST=10.0.0.1
ALLOYDB_PORT=5432

# ============================================
# MESSAGING PLATFORMS
# ============================================

# WhatsApp Business API
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_VERIFY_TOKEN=your-verify-token
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_SECRET=your-telegram-webhook-secret

# ============================================
# SECURITY & ENCRYPTION
# ============================================
VAULT_ENCRYPTION_KEY=your-256-bit-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=24h
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# DATABASE & STORAGE
# ============================================

# Redis (for caching and pub/sub)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Local Storage Paths
THOUGHT_SIGNATURES_PATH=./storage/thought-signatures
TASK_HISTORY_PATH=./storage/task-history
AUDIT_LOG_PATH=./storage/audit-logs

# ============================================
# GATEWAY SETTINGS
# ============================================

# Manager Agent
MANAGER_AGENT_MAX_CONCURRENT_TASKS=10
MANAGER_AGENT_TASK_TIMEOUT=300000

# Builder Agent Pool
BUILDER_POOL_MIN_SIZE=2
BUILDER_POOL_MAX_SIZE=10
BUILDER_AGENT_IDLE_TIMEOUT=600000

# Heartbeat Monitor
HEARTBEAT_INTERVAL_MS=30000
HEARTBEAT_ALERT_THRESHOLD=3

# ============================================
# WEB UI SETTINGS
# ============================================
WEB_UI_PORT=3000
WEB_UI_HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000

# WebSocket
WEBSOCKET_PING_INTERVAL=25000
WEBSOCKET_PING_TIMEOUT=60000

# ============================================
# MONITORING & OBSERVABILITY
# ============================================

# Logging
LOG_FORMAT=json
LOG_FILE_PATH=./logs/openclaw.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=10

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Only used in development mode

DEV_AUTO_RELOAD=true
DEV_MOCK_WHATSAPP=false
DEV_MOCK_TELEGRAM=false
DEV_MOCK_GEMINI=false
DEV_ENABLE_DEBUG_ROUTES=true

# ============================================
# DOCKER SETTINGS
# ============================================
DOCKER_NETWORK=openclaw-network
DOCKER_VOLUME_DATA=openclaw-data
DOCKER_VOLUME_LOGS=openclaw-logs
